<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="abbad.hamza.carcontroller.MainActivity"
    android:orientation="vertical">

    <SurfaceView
        android:layout_width="match_parent"
        android:id="@+id/surfaceView"
        android:layout_height="@dimen/surfaceView_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/sendSerialButton"
        android:layout_below="@+id/logTitleTextView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logTextView" />
    </ScrollView>

    <Button
        android:text="@string/send_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendSerialButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendMessageButtonClicked"
        android:ems="10"
        android:hint="@string/send_input_hint"
        android:id="@+id/messageEditText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/sendSerialButton"
        android:layout_toStartOf="@+id/sendSerialButton"
        android:inputType="text" />

    <TextView
        android:text="@string/bluetooth_connection_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluetoothTextView"
        android:layout_alignBaseline="@+id/bluetoothConnectButton"
        android:layout_alignBottom="@+id/bluetoothConnectButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/bluetoothConnectButton"
        android:layout_toStartOf="@+id/bluetoothConnectButton" />

    <Button
        android:text="@string/reset_button_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluetoothConnectButton"
        android:onClick="resetBluetoothButtonClicked"
        android:layout_below="@+id/surfaceView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/serial_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serialTextView"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/reset_button_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/bluetoothConnectButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="resetSerialButtonClicked" />

    <TextView
        android:text="@string/log_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logTitleTextView"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
